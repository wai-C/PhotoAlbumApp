<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPhotoActivity">

    <ImageView
        android:id="@+id/imageViewUploadUp"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/upload_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUploadUp">


        <EditText
            android:id="@+id/editTextTitleUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:hint="Title"
            android:textColor="@color/text_view_title_text"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editTextTextMultiLineDesUp"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="description of the photo"
            android:inputType="textMultiLine"
            android:textColor="@color/text_view_title_des"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:backgroundTint="@color/update_update_btn"
            android:text="Update"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>